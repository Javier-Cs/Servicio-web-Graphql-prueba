type Query{
    listarProductos: [Producto],
    listarById(id : Int ):Producto
}



type Producto{
    id:  Int,
    nombre: String,
    precio: Float,
    cantidad: Int,
    categoria: Categoria
}

type Categoria{
    id:  Int,
    nombre: String
}


type Mutation{
    guardarProducto(producto: ProductoInput):Producto
}

input ProductoInput{
    nombre : String,
    precio : Float,
    cantidad : Int
}